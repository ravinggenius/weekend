root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.webmanifest]
indent_style = space
indent_size = 2
